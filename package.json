{
  "name": "mannavest",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3001",
  "engines": {
    "node": "10.15.3"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.0.2",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "express": "^4.17.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "redux": "^4.0.4"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod && cd client || yarn start:dev",
    "client": "cd client && yarn start",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn client\"",
    "start:prod": "node server.js",
    "build": "cd client && yarn build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "heroku-postbuild": "cd client && yarn install --only=dev && yarn install && yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
